{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"noUselessElse": "off"
			},
			"a11y": {
				"useValidAriaRole": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			}
		}
	}
}